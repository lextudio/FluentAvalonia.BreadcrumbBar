<Window x:Class="SampleApp.Views.MainWindow"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="using:FluentAvalonia.BreadcrumbBar.UI.Controls"
        xmlns:faui="using:FluentAvalonia.UI.Controls"
        xmlns:viewModels="using:SampleApp.ViewModels"
        Title="SampleApp"
        d:DesignHeight="450"
        d:DesignWidth="800"
        x:CompileBindings="True"
        x:DataType="viewModels:MainViewModel"
        mc:Ignorable="d">
    <!--<Window.DataTemplates>
        <DataTemplate x:DataType="viewModels:ItemViewModel">
            <TextBlock Text="{Binding Text}" />
        </DataTemplate>
    </Window.DataTemplates>-->

    <StackPanel Margin="16" Spacing="8">
        <faui:InfoBar x:Name="InfoBar" />
        <ui:BreadcrumbBar x:Name="BreadcrumbBar" ItemsSource="{Binding Breadcrumbs}">
            <ui:BreadcrumbBar.ItemTemplate>
                <DataTemplate x:DataType="viewModels:BreadcrumbItemViewModel">
                    <ui:BreadcrumbBarItem>
                        <ui:BreadcrumbBarItem.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                                <Button Click="Chevron_Click" Background="Transparent" BorderThickness="0" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Text}" VerticalAlignment="Center" />                                    
                                </Button>
                            </StackPanel>
                        </ui:BreadcrumbBarItem.Content>
                    </ui:BreadcrumbBarItem>
                </DataTemplate>
            </ui:BreadcrumbBar.ItemTemplate>
        </ui:BreadcrumbBar>
    </StackPanel>
</Window>
